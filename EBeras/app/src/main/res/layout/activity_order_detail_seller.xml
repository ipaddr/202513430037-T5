<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.seller.OrderDetailSellerActivity">

    <!-- Toolbar ID: toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Pesanan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/bottom_action_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Ringkasan Transaksi -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ringkasan Transaksi"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView android:id="@+id/tv_invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                tools:text="#INV12345 (Menunggu Konfirmasi)" />

            <TextView android:id="@+id/tv_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Tanggal: 23 November 2025" />

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/light_gray" android:layout_marginVertical="16dp"/>

            <!-- Detail Pembeli -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info Pembeli"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView android:id="@+id/tv_buyer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="Nama: Budi Santoso" />

            <TextView android:id="@+id/tv_buyer_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Alamat: Jl. Padang Raya No. 123" />

            <TextView android:id="@+id/tv_buyer_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Telp: 0812xxxxxx" />

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/light_gray" android:layout_marginVertical="16dp"/>

            <!-- Detail Item -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Dipesan"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView android:id="@+id/tv_product_ordered_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                tools:text="Beras Solok Premium" />

            <TextView android:id="@+id/tv_product_ordered_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Jumlah: 10 Kg @ Rp 15.000/Kg" />

            <TextView android:id="@+id/tv_product_ordered_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/green_dark"
                tools:text="Subtotal: Rp 150.000" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Action Bar (bottom_action_bar) -->
    <LinearLayout
        android:id="@+id/bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView android:id="@+id/tv_current_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="Status Saat Ini: Menunggu Konfirmasi" />

        <!-- Tombol Aksi 1: btn_update_status -->
        <Button android:id="@+id/btn_update_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Konfirmasi Pesanan (Diproses)"
            android:backgroundTint="@color/green_primary"
            app:cornerRadius="8dp" />

        <!-- Tombol Aksi 2: btn_complete_order -->
        <Button android:id="@+id/btn_complete_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tandai Selesai (Terkirim)"
            android:backgroundTint="#00BCD4"
            app:cornerRadius="8dp"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>