<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_cart_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:contentDescription="Gambar Produk"
                android:layout_marginEnd="12dp"
                tools:src="@drawable/placeholder_rice" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_cart_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    tools:text="Beras Pandan Wangi Premium" />

                <TextView
                    android:id="@+id/tv_cart_price_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    tools:text="Harga/kg: Rp 12.000" />
            </LinearLayout>

            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete"
                android:tint="#F44336"
                android:contentDescription="Hapus Item"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_minus"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="-"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:padding="0dp"
                    app:cornerRadius="4dp"
                    app:strokeColor="#e0e0e0"
                    app:strokeWidth="1dp" />

                <TextView
                    android:id="@+id/tv_cart_kuantitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    tools:text="5" />

                <Button
                    android:id="@+id/btn_plus"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="+"
                    android:textSize="18sp"
                    android:textColor="@color/green_primary"
                    android:padding="0dp"
                    app:cornerRadius="4dp"
                    app:strokeColor="@color/green_primary"
                    app:strokeWidth="1dp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_cart_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:text="Rp 60.000" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>