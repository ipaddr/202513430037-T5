<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.consumer.HomeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_app_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="E-Beras Padang"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="0dp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/fl_notification_container">

                    <ImageView
                        android:id="@+id/iv_notification"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notification"
                        android:contentDescription="Notifikasi" />

                    <TextView
                        android:id="@+id/tv_notification_badge"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/bg_notification_badge"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="8sp"
                        android:text="0"
                        android:visibility="gone"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        tools:text="9+"
                        tools:visibility="visible"/>
                </FrameLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/ll_search_and_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout">

        <LinearLayout
            android:id="@+id/ll_search_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_search_rounded"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                android:contentDescription="Ikon Pencarian"
                android:tint="@android:color/darker_gray" />

            <EditText
                android:id="@+id/et_search_input"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:hint="Cari nama beras atau jenis beras"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionSearch"/>
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:id="@+id/chip_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Beras Putih"
                    android:backgroundTint="@color/green_primary"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="18dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Beras Merah"
                    android:backgroundTint="@color/light_gray"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="18dp"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Beras Ketan"
                    android:backgroundTint="@color/light_gray"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:paddingHorizontal="16dp"
                    app:cornerRadius="18dp"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_catalog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilihan Beras Untuk Anda"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/ll_search_and_filter" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_products"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_catalog_title"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/item_product"
        app:spanCount="2"
        android:clipToPadding="false"
        android:paddingBottom="10dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>